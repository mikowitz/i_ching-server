!!!
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=edge")
    %meta(name="viewport" content="width=device-width, initial-scale=1")
    %meta(name="description" content="The I Ching")
    %meta(name="author" content="Michael Berkowitz")

    %title I Ching
    - css_path = static_path(@conn, "/css/app.css")
    %link(rel="stylesheet" href="#{css_path}")

  %body
    .container
      %header.header
        %nav(role="navigation")
          %ul.nav.nav-pills.pull-right
            %li= link "Hexagrams", to: hexagram_path(@conn, :index)



      %p.alert.alert-info(role="alert")= get_flash(@conn, :info)
      %p.alert.alert-error(role="alert")= get_flash(@conn, :error)

      %main(role="main")
        = render @view_module, @view_template, assigns

    - js_path = static_path(@conn, "/js/app.js")
    %script(src="#{js_path}")
